@model ProyectoCiclo3.App.Frontend.Pages.FormServicioModel
@{

} 

 <h1 align="center">Formulario Creaci√≥n de Encomiendas</h1>


  <div class="text-justify">

  <form method="POST">
    
    <br>
  <label for="descripcion" class="form-label">Usuario Origen :</label>
  <select name = "origen" class="form-control">
        <option value="">-</option>
        @foreach (var usuario in Model.Usuarios)
    {
        <option value="@usuario.id">@usuario.nombre @usuario.apellidos - @usuario.ciudad</option>
    }
    </select>

    <br>
  <label for="usuario destino" class="form-label">Usuario Destino:</label>
  <select name="destino" class="form-control">
        <option value="">-</option>
        @foreach (var usuario in Model.Usuarios)
    {
        <option value="@usuario.id">@usuario.nombre @usuario.apellidos - @usuario.ciudad</option>
    }
    </select>
  
   <br>
  <label for="tipo" class="form-label">Fecha:</label>
  <input type="Date" class="form-control" id="fecha"   name="fecha" required> 
   <br>
  <label for="tipo" class="form-label">Hora de envio:</label>
  <input type="Time" class="form-control" id="hora"   name="hora" required>
   <br>
    <label for="usuario destino" class="form-label">Usuario Destino:</label>
  <select name="encomienda" class="form-control">
        <option value="">-</option>
        @foreach (var encomienda in Model.Encomiendas)
    {
        <option value="@encomienda.id">@encomienda.descripcion</option>
    }
    </select>
  
  <hr>
  <button type="submit" class="btn btn-success">Enviar</button>

  <a class="btn btn-primary" asp-page="/Servicio/List" >Volver</a>
  
  
  </form>
  </div>
