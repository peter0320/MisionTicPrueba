<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NCEnvios</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-1">
            
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">NCEnvios <i class="fas fa-space-shuttle"></i> </a>
               
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item  dropdown">
                            <a class="nav-link text-white active " asp-area="" asp-page="/Index"> 
                            Inicio 
                           <i class="fas fa-home"></i> </a>
                        </li>

                            <li class="nav-item  dropdown">
                                
                             <a class="nav-link dropdown-toggle active" data-toggle="dropdown"  data-target="desplegable" asp-area="">
                                
                            Menu Usuario  <i class="fas fa-users-cog"></i>
                             </a>
                             
                             <div class="dropdown-menu">
                                <a class="dropdown-item" asp-page="/Usuario/Create">Crear Usuario <i class="fas fa-user"></i> </a>
                                     <a class="dropdown-item" asp-page="/Usuario/List">Listar Usuario <i class="fas fa-list"></i> </a>   
                                 </div>                         
                             
                             </li>

                            <li class="nav-item dropdown">
                                
                             <a class="nav-link dropdown-toggle active" data-toggle="dropdown"  data-target="desplegable" asp-area="">
                                Menu Encomienda <i class="fas fa-box-open"></i>
                             </a>
                             
                               <div class="dropdown-menu">
                                  <a class="dropdown-item" asp-page="/Encomienda/Create">Crear Encomienda <i class="fas fa-box-open"></i></a>
                                <a class="dropdown-item" asp-page="/Encomienda/List">Lista Encomienda <i class="fas fa-th-list"></i> </a>   
                             </div>                       
                             
                             </li>
                             <li class="nav-item dropdown">
                                
                             <a class="nav-link dropdown-toggle active" data-toggle="dropdown"  data-target="desplegable" asp-area="">
                                 Menu Servicios <i class="fas fa-paper-plane"></i>
                             </a>
                             <div class="dropdown-menu">
                              <a class="dropdown-item" asp-page="/Servicio/Create">Crear Envios <i class="fas fa-shipping-fast"></i> </a>
                               <a class="dropdown-item" asp-page="/Servicio/List">Listado de Servicios  <i class="fas fa-list-alt"></i>  </a>  
                             </div>                 
                           </li>
                      </div>                   
              </div>  
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Mision - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
